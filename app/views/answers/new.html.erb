<%= render "shared/header" %>

<div class="container">
  <div class="m-4 p-4 bg-white">
    <div class="mt-2">
      <h4>回答記入欄</h4>     
    </div>
    <%= form_with model: @answer, url: question_answers_path, local: true do |f| %>
        <%= render "shared/error_messages", model: f.object %>
      <div class='pt-4'>
        <%= f.text_area :text, class:'form-control', placeholder: "翻訳を入力" %>
      </div>
      <div class="mt-4 d-flex justify-content-center">
        <%= f.submit "回答する", class:"btn btn-primary" %>
      </div>
      <div class="mt-4 d-flex justify-content-center">
        <%=link_to "戻る", root_path, class:"btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>

<footer class="footer mt-auto py-3 bg-white fixed-bottom">
  <div class="container d-flex justify-content-center">
    <span class="text-muted">エフー知恵袋</span>
  </div>
</footer>