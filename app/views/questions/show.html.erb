<h1>質問詳細</h1>
<div class="question">
  <div class="question-category">
    <%= @question.category.name %>
  </div>
  <div class="question-text">
    <%= @question.text %>
  </div>
  <div class="question-url">
    <%= @question.url %>
  </div>
  <div class="question-time">
    <%= @question.time %>
  </div>
</div>

<h1>回答一覧</h1>
<div class="answer">
  <% @answer.each do |answer| %>
    <div class="answer-text">
      <%= answer.text %>
    </div>
  <% end %>
</div>

<%= link_to "トップページに戻る", root_path, class:"back-btn" %>