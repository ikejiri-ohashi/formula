<%= render "shared/header" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-8 m-4 p-4 bg-white">
      <div class="ms-4 mt-2">
        <h2>質問を投稿する</h2>
      </div>
      <%= form_with model: @question, url: questions_path, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="m-4">
          <%= f.label :url, class:"form-label" %><br />
          <%= f.text_area :url, class:"form-control", placeholder:"動画のリンクを入力してください(必須)" %>
        </div>
        <div class="m-4">
          <%= f.label :time, class:"form-label" %><br />
          <%= f.text_area :time, class:"form-control", placeholder:"動画内の時間を指定してください(必須)" %>
        </div>
        <div class="m-4">
          <%= f.label :text, class:"form-label" %><br />
          <%= f.text_area :text, class:'form-control', placeholder:"補足事項があれば記入してください(任意)" %>
        </div>
        <div class="m-4">
          <%= f.label :category, class:"form-label" %><br />
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-select"}) %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= f.submit "質問を投稿する", class:"btn btn-primary" %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= link_to 'トップページに戻る', root_path, class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>