<%= render "shared/header" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-4 m-4 p-4 bg-white">
      <div class="ms-4 mt-2">
        <h2>Welcome!</h2>
      </div>
    </div>
    <div class="col-md-4 m-4 p-4 bg-white">
      <div class="ms-4 mt-2">
        <h4>新規ユーザー登録</h4>
      </div>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "shared/error_messages", model: f.object %>

        <div class="m-4">
          <%= f.label :nickname, class:"form-label" %><br>
          <%= f.text_field :nickname, class:"form-control", autofocus: true, maxlength: "6" %>
        </div>

        <div class="m-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control" %>
        </div>

        <div class="m-4">
          <%= f.label :password, class:"form-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
        </div>

        <div class="m-4">
          <%= f.label :password_confirmation, class:"form-label" %><br />
          <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off" %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= f.submit "新規ユーザー登録", class:"btn btn-primary" %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%=link_to "トップページに戻る", root_path, class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
