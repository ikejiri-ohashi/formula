<%= render "shared/header" %>

<div class="container">
  <h2>ユーザー登録</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    <div class="md-3">
      <%= f.label :nickname, class:"form-label" %><br>
      <%= f.text_field :nickname, class:"form-control", autofocus: true, maxlength: "6" %>
    </div>

    <div class="md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control" %>
    </div>

    <div class="md-3">
      <%= f.label :password, class:"form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>

    <div class="md-3">
      <%= f.label :password_confirmation, class:"form-label" %><br />
      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off" %>
    </div>

    <%= f.submit "新規ユーザー登録", class:"btn btn-primary" %>
    <%=link_to "戻る", root_path, class:"btn btn-primary" %>
  <% end %>
</div>

<%= render "shared/footer" %>
