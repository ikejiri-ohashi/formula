<%= render "shared/header" %>
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-4 m-4 p-4 bg-white">
      <div class="ms-4 mt-2">
        <h2>Welcome back!</h2>
      </div>
    </div>
    <div class="col-md-4 m-4 p-4 bg-white">
      <div class="ms-4 mt-2">
        <h4>ログイン</h4>
      </div>
      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="m-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control" %>
        </div>

        <div class="m-4">
          <%= f.label :password, class:"form-label" %><br />
          <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
        <div class="mt-4 d-flex justify-content-center">
          <%=link_to "トップページに戻る", root_path, class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>